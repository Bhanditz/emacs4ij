<idea-plugin version="2">
  <name>Emacs4ij</name>
  <description>Plugin for Emacs support</description>
  <version>1.0</version>
  <vendor logo="icons/idea.png">JetBrains</vendor>
  <idea-version since-build="8000"/>


  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="org.jetbrains.emacs4ij.ExecuteElispCommand" class="org.jetbrains.emacs4ij.ExecuteElispCommandAction"
              text="Execute _elisp command" description="Execute elisp command" icon="icons/emacs.png">
          <add-to-group group-id="MainToolBar" anchor="last"/>
          <keyboard-shortcut keymap="$default" first-keystroke="alt X"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <!-- Declare the application level service -->
    <applicationService serviceInterface="org.jetbrains.emacs4ij.EmacsHomeService" serviceImplementation="org.jetbrains.emacs4ij.EmacsHomeService">
    </applicationService>

  </extensions>
</idea-plugin>